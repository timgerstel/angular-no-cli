{
  "include": ["./src/plugin"],
  "compilerOptions": {
      "target": "es2022",
      "lib": ["es2022", "dom"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "ES2022",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
  }
}
